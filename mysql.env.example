# MySQL 数据库配置示例
# 复制此文件为 .env 并填入你的 MySQL 连接信息

NODE_ENV=production

# 数据库类型
DB_TYPE=mysql

# MySQL 连接信息
DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_USERNAME=your-username
DB_PASSWORD=your-password
DB_DATABASE=interview_system

# 数据库选项
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# SSL 连接（可选）
# DB_SSL=true

# 连接池大小（可选）
# DB_CONNECTION_LIMIT=10

# JWT 密钥
JWT_SECRET=your-super-secret-jwt-key-here

# 服务器端口
PORT=3000
